<h1><%= title %></h1>

<a href="/reports/create" class="btn btn-primary">+ สร้างรายงานใหม่</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>ข่าวลือ</th>
            <th>รายงานโดย</th>
            <th>วันที่รายงาน</th>
            <th>ประเภท</th>
            <th>การกระทำ</th>
        </tr>
    </thead>
    <tbody>
        <% if (reports.length === 0) { %>
            <tr>
                <td colspan="6" style="text-align: center;">ไม่มีรายงาน</td>
            </tr>
        <% } else { %>
            <% reports.forEach(report => { %>
                <tr>
                    <td><%= report.Report_ID %></td>
                    <td><%= report.Rumour_Title %></td>
                    <td><%= report.FName %> <%= report.LName %></td>
                    <td><%= new Date(report.Report_Date).toLocaleString('th-TH') %></td>
                    <td><%= report.Report_Type %></td>
                    <td>
                        <a href="/rumors/<%= report.Rumour_ID %>" class="btn btn-primary">ดูข่าวลือ</a>
                    </td>
                </tr>
            <% }) %>
        <% } %>
    </tbody>
</table>
